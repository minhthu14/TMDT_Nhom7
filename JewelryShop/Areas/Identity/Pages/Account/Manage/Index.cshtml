                </div>
            </div>
            <!-- End Single Slide -->
        </div>
    </div>
    <!-- End Slider Area -->
}
    <section class="htc__product__area ptb--130 bg__white">

        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>@ViewData["Title"]</h1><br />
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber">Số điện thoại</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-dark">Lưu</button>
                    <button id="update-profile-button" class="btn btn-dark" asp-controller="Address" asp-action="Index">Sửa địa chỉ</button>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </section>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
