@model JewelryShop.Models.Category
<section class="htc__product__area ptb--130 bg__white">
    <div class="container">
        <form asp-action="Edit">
            <div class="row p-3 border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <div class="col-12 border-bottom">
                    <h2 class="text-primary" style="font-family:Tahoma">Sửa Loại Trang Sức</h2>
                </div>
                <div class="col-8 pt-4">
                    <div class="form-group row">
                        <div class="col-4">
                            <label class="control-label">Tên Loại Trang Sức</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-outline-dark form-control" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-dark form-control" />Quay Lại</a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </form>
           

        
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
