@model JewelryShop.Models.Category
<section class="htc__product__area ptb--130 bg__white">
    <div class="container">
        <div>
            <h4>Loại Trang Sức</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Tên Loại Trang Sức</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.CategoryId">Chỉnh Sửa</a> |
            <a asp-action="Index">Quay Lại</a>
        </div>
    </div>
</section>